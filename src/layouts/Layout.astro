---
import "../styles/global.scss";
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Teddy Zamborsky</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Serif:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Quicksand:wght@300..700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />
    <main class="outer-container">
      <slot />
    </main>
  </body>
  <footer>
    <div>
      Made with ♡ by Danielle Rubin · Logo design by Wil Roos · © {
        new Date().getFullYear()
      } Teddy Zamborsky
    </div>
  </footer>
</html>

<style lang="scss">
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  * {
    box-sizing: border-box;
  }

  body {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  main {
    padding-block: 0 40px;
    width: 100%;
    flex: 1;
  }

  footer {
    padding-block: 0.75rem;
    font-size: 0.8rem;
  }
</style>
